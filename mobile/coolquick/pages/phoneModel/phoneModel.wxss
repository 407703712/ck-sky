/**index.wxss**/
.search-contain{
  background: #F8F8F8;
  padding: 0 30rpx;
  position: relative;
  height: 10%;
  display: flex;
  -webkit-display:flex;
  align-items: center;
  overflow: visible;
  z-index: 100;
}
.search-model{
  font-size: 26rpx;
  background: #fff;
  padding: 10rpx;
  padding-left: 80rpx;
  color: #ACACAC;
  flex-grow:1;
}
.search-logo{
  width: 52rpx;
  height: 52rpx;
  position: absolute;
  left: 50rpx;
  top: 50%;
  margin-top: -26rpx;
  z-index: 10;
}
.model-content-contain{
  height: 90%;
}
.model-slider-contain{
  width: 26%;
  height: 100%;
  overflow: auto;
  display: inline-block;
}
.show-item{
  width: 100%;
  padding: 20rpx 0;
  background: #F8F8F8;
  text-align: center;
  font-size: 26rpx;
  color: #A6A6A6;
}
page {
  height: 100%;
}
.active{
  color: #D2B88F;
  box-sizing: border-box;
  position: relative
}
.active::after{
  content: "";
  display: block;
  position: absolute;
  height: 100%;
  width: 6rpx;
  left: 0;
  top: 0;
  z-index: 11;
  background: #D2B88F;
}
.model-show-contain{
  width: 74%;
  display: inline-block;
  vertical-align: top;
}
.title{
  font-size: 26rpx;
  color: #A6A6A6;
  padding: 20rpx 0 0 30rpx;
  margin-bottom: 40rpx;
}
.model-show-content{
}
.model-item{
  width: 30%;
  display: inline-block;
  margin-right: 5%;
  text-align: center;
  margin-bottom: 40rpx;
  vertical-align: top;
}
.model-item:nth-child(3n){
  margin-right: 0;
}
.model-item-img-contain{
  width: 88rpx;
  height: 88rpx;
  margin: 0 auto;
  margin-bottom: 10rpx;
  vertical-align: middle;
}
.model-item-img{
  max-width: 100%;
  max-height: 100%;
}
.model-name{
  font-size:26rpx;
  color: #333333;
}
.show{
  display: block;
}
.hide{
  display: none;
}
.content-show{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 50%;
  background: #fff;
  border: 1px solid #ccc;
  -webkit-transform: translate(-50%,100%);
  -ms-transform: translate(-50%,100%);
  -o-transform: translate(-50%,100%);
  transform: translate(-50%,100%);
  min-height: 400rpx;
  z-index: 100;
  max-height: 60%;
  overflow-y: auto;
}
.layer{
  position: fixed;
  background: rgba(0,0,0,.4);
  z-index: 88;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.s-back{
  border: 2px solid #ccc;
  -webkit-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  -o-transform: rotate(45deg);
  transform: rotate(45deg);
  border-top: none;
  border-right: none;
  width: 30rpx;
  height: 30rpx;
}
.pdladd{
  left: 80rpx !important;
}
.search-item{
  padding: 18rpx;
  border-bottom: 1px solid #ccc;
  font-size: 30rpx;
  color: #444;
}
.search-item:last-child{
  border-bottom: none;
}