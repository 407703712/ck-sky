/**index.wxss**/
swiper-item{
  width: 100%;
  height: 300rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.phone-model-show-contain{
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
}
.phoneLogo{
  width: 100rpx;
}
.phone-show{
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.phone-model-text{
  margin-left: 20rpx;	
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-direction:column;
}
.change-model-button{
	background-color: #fff;
	color: #D2B88F; /* 主色调 */
	border: 1px solid #D2B88F;
	border-radius: 40rpx;
}
button[size=mini]{
	font-size: 30rpx;
}
.phone-model-show-contain{
	border-bottom: 20rpx solid #F6F6F6;
}
.select-contain{
	padding: 20rpx 25rpx;
}
.select-btn-contain{
  
}
.select-title{
	font-size: 28rpx;
	margin-bottom: 20rpx;
  color: #343434;
}
.fault-item{
	float: left;
	background: #F6F6F6;
	margin-bottom: 20rpx;
	color: #6D6D6D;
	padding: 15rpx 0;
	text-align: center;
	width: 30%;
	font-size: 30rpx;
	margin-right: 5%;
}
.fault-item:nth-child(3n) {
  justify-content: flex-start;
  align-self: flex-end;
  margin-right: 0;
}
.inner-footer{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
}
.money-contain{
  width: 60%;
  padding: 40rpx 30rpx;
  font-size: 26rpx;
  color: #AAAAAA;
  border-top: 1px solid #ddd;
}
.money-num{
  color: #FCB844;
  font-size: 32rpx;
  display: inline;
}
.yuyue-btn{
  width: 40%;
  text-align: center;
  color: white;
  background: #C8A876;
  padding: 40rpx 0rpx;
  font-size: 32rpx;
  border-radius: 0 !important;
  line-height: normal !important;
}
.layer-contain{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0,0,0,.5);
}
.layer-title{
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;  
  margin-bottom: 20rpx;
}
.layer-content{
  
  background-color: #fff;
  border-radius: 20rpx;
  width: 90%;
  margin: 0 auto;
  padding-bottom: 20rpx;
  margin-top: 80rpx;
}
.subbtn{
  margin: 0 auto;
  width: 90%;
  text-align: center;
  background-color:#D2B88F ;
  color:white ;
  padding: 16rpx 0;
  border-radius: 60rpx;
}
label{
  display: block;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
  padding-left: 5%;
  padding-right: 5%;
}
textarea{
  background: #F8F8F8;
  width: 90%;
  margin: 0 auto;
  padding: 26rpx 12rpx;
  height: 100rpx;
  margin-bottom: 40rpx;
  font-size: 28rpx;
}
.close-img{
  display: block;
  margin: 0 auto;
  width: 64rpx;
  margin-top: 40rpx;
}
.show{
  display: block;
}
.hide{
  display: none;
}
.item-price{
  float: right;
}
.descript-text{
  color: #999;
  font-size: 28rpx;
  width: 90%;
  margin: 0 auto;
  margin-bottom: 20rpx;
}