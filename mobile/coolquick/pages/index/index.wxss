/**index.wxss**/
swiper-item{
  width: 100%;
  height: 300rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.phone-model-show-contain{
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
}
.phoneLogo{
  width: 100rpx;
}
.phone-show{
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.phone-model-text{
  margin-left: 20rpx;	
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-direction:column;
}
.change-model-button{
	background-color: #fff;
	color: #D2B88F; /* 主色调 */
	border: 1px solid #D2B88F;
	border-radius: 40rpx;
}
button[size=mini]{
	font-size: 30rpx;
}
.phone-model-show-contain{
	border-bottom: 20rpx solid #F6F6F6;
}
.select-contain{
	padding: 20rpx 25rpx;
}
.select-btn-contain{
  
}
.select-title{
	font-size: 28rpx;
	margin-bottom: 20rpx;
  color: #343434;
}
.fault-item{
	float: left;
	background: #F6F6F6;
	margin-bottom: 20rpx;
	color: #6D6D6D;
	padding: 15rpx 0;
	text-align: center;
	width: 30%;
	font-size: 30rpx;
	margin-right: 5%;
}
.fault-item:nth-child(3n) {
  justify-content: flex-start;
  align-self: flex-end;
  margin-right: 0;
}
.inner-footer{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
}
.money-contain{
  width: 60%;
  padding: 40rpx 30rpx;
  font-size: 26rpx;
  color: #AAAAAA;
  border-top: 1px solid #ddd;
}
.money-num{
  color: #FCB844;
  font-size: 32rpx;
  display: inline;
}
.yuyue-btn{
  width: 40%;
  text-align: center;
  color: white;
  background: #C8A876;
  padding: 40rpx 0rpx;
  font-size: 32rpx;
}